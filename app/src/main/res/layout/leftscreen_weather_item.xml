<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_future_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         />

    <ImageView
        android:id="@+id/iv_future_weather_image"
        android:layout_width="@dimen/item_weather_ll_future_imageview_width"
        android:layout_height="@dimen/item_weather_ll_future_imageview_height"
        android:contentDescription="@null"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_future_view_bottom_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_future_view_bottom_temp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp_devi"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_future_view_top_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_future_view_top_temp"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>