<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_future"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view_future"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_weather_ll_future_weather_margin_left"
        android:layout_marginRight="@dimen/main_weather_ll_future_weather_margin_right"
        android:visibility="visible"
        >
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_future_fail_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" >
    </TextView>

</RelativeLayout>